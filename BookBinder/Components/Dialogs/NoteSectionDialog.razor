<MudDialog>
    <DialogContent>
        <MudTextField T="string" @bind-Value="@this.sectionTitle" Label="Title" Immediate="@true" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Disabled="@string.IsNullOrWhiteSpace(this.sectionTitle)" Color="Color.Primary" OnClick="Submit">Ok</MudButton>
    </DialogActions>
</MudDialog>


@code {
    private string sectionTitle = string.Empty;

    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    void Submit() => MudDialog.Close(DialogResult.Ok(this.sectionTitle));
    void Cancel() => MudDialog.Cancel();
}