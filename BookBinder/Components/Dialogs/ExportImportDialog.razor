@using BookBinder.Utils;

<MudDialog>
    <DialogContent>
        <MudRadioGroup  @bind-Value="@SelectedOption">
            <MudRadio Value="@(ExportOptions.ExportToApp)" Color="Color.Primary">Export to another app (drive,notepad etc.)</MudRadio>
            <MudRadio Value="@(ExportOptions.ExportToFolder)" Color="Color.Primary">Export to Folder</MudRadio>
            <MudRadio Value="@(ExportOptions.ExportToClipboard)" Color="Color.Primary">Export to Clipboard</MudRadio>
        </MudRadioGroup>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">Ok</MudButton>
    </DialogActions>
</MudDialog>

@code {
    public ExportOptions SelectedOption { get; set; }
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    void Submit() => MudDialog.Close(DialogResult.Ok(SelectedOption));
    void Cancel() => MudDialog.Cancel();
}
